{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@full-stack/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "sw-common": ["libs/sw/common/src/index.ts"],
      "sw-ng": ["libs/sw/ng/src/index.ts"],
      "sw-mat": ["libs/sw/mat/src/index.ts"],
      "@feature/*": ["apps/frontend/src/app/@feature/*"],
      "@shared/*": ["apps/frontend/src/app/@shared/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
